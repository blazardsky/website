---
import { cn } from '@lib/utils';

interface Props {
	title: string;
	type: 'creative' | 'technical';
	href: string;
    alt?: string;
    src: string;
}

const { href, title, type, src, alt = '' } = Astro.props;

---

<li class="list-none flex-grow sm:max-w-[50%] relative group">
  <a href={href} class="w-full block group no-underline">
    <div class={`${
    type === 'creative' 
    ? 'bg-creative group-focus:bg-creative-dark items-start' 
    : 'bg-technical group-focus:bg-technical-dark items-end'
    } w-full h-full min-h-[20rem] md:min-h-[28rem] flex flex-col justify-end clip02`}>
      <div class="p-8">
        <h2 class="font-cursive text-center font-bold ">{title}</h2>
        <p class="text-xl md:text-2xl !leading-none">
            <slot />
        </p>
      </div>
    </div>
  </a>
  <img
  src={src}
  alt={alt}
  height="384"
  width="384"
  class={cn(
    type === 'creative' && 'right-5 md:right-20',
    type === 'technical' && 'left-5 md:left-20',
    "absolute top-0 md:top-5 w-auto h-60 lg:h-96 group-hover:scale-125 transition-transform ease-out will-change-transform pointer-events-none z-10"
  )}
/>
</li>

<style>

	.clip02 {
        scale: 1.015;
        padding: 1rem;
	}

</style>